{
  "type": "object",
  "properties": {
    "today": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/day"
      }
    },
    "todayHourly": {
      "type": "array",
      "items": "$include:hourly.json"
    },
    "todayAlerts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/alert"
      }
    },
    "precipitationPeriods": {
      "type": "array",
      "items": {
        "type": "array",
        "maxItems": 5,
        "items": {
          "$ref": "#/$defs/precipPeriod"
        }
      }
    },
    "detailed": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "daytime": { "$ref": "#/$defs/day" },
          "nightime": { "$ref": "#/$defs/day" },
          "hourlyPeriods": { "type": "array" },
          "alertPeriods": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/alert"
            }
          }
        }
      }
    },
    "useOnlyLowForToday": {
      "type": "boolean"
    }
  },

  "$defs": {
    "day": {
      "type": "object",
      "properties": {
        "shortDayName": {
          "type": "string",
          "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
        },
        "dayName": {
          "enum": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ]
        },
        "monthAndDay": { "type": "string", "pattern": ".+ .+" },
        "startTime": { "type": "string", "pattern": "$isoRegex" },
        "shortForecast": { "type": "string" },
        "icon": {
          "type": "object",
          "properties": {
            "icon": {
              "type": "string"
            },
            "base": {
              "type": "string"
            }
          }
        },
        "temperature": { "type": "number" },
        "probabilityOfPrecipitation": {
          "oneOf": [{ "type": "number" }, { "type": "null" }]
        },
        "isDaytime": { "type": "boolean" },
        "isOvernight": { "type": "boolean" },
        "timeLabel": {
          "type": "string",
          "pattern": "^\\d{1,2}[AP]M-\\d{1,2}[AP]M"
        },
        "hourlyPeriods": { "type": "array", "items": "$include:hourly.json" }
      }
    },
    "alert": {
      "type": "object",
      "properties": {
        "periodIndex": { "type": "integer" },
        "duration": { "type": "integer" },
        "alert": "$include:alerts.json"
      }
    },
    "precipPeriod": {
      "type": "object",
      "properties": {
        "start": { "type": "string" },
        "startRaw": { "type": "string" },
        "end": { "type": "string" },
        "endRaw": { "type": "string" }
      }
    }
  }
}
