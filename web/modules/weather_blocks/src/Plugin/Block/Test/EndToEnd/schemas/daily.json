{
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "periods": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/day"
        }
      },
      "hourPeriods": {
        "type": "array",
        "items": {
          "items": "$include:hourly.json"
        }
      },
      "alerts": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/alert"
        }
      },
      "todayHighestAlertLevel": {
        "type": "string"
      },
      "precipPeriods": {
        "type": "object",
        "properties": {
          "hasIce": { "type": "boolean" },
          "hasSnow": { "type": "boolean" },
          "hasQPF": { "type": "boolean" },

          "periods": {
            "type": "array",
            "maxItems": 5,
            "items": {
              "$ref": "#/$defs/precipPeriod"
            }
          }
        }
      },
      "useOnlyLow": {
        "type": "boolean"
      }
    }
  },

  "$defs": {
    "day": {
      "type": "object",
      "properties": {
        "shortDayName": {
          "type": "string",
          "enum": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]
        },
        "dayName": {
          "enum": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ]
        },
        "monthAndDay": { "type": "string", "pattern": ".+ .+" },
        "startTime": { "type": "string", "pattern": "$isoRegex" },
        "shortForecast": { "type": "string" },
        "icon": {
          "type": "object",
          "properties": {
            "icon": {
              "type": "string"
            },
            "base": {
              "type": "string"
            }
          }
        },
        "temperature": { "type": "number" },
        "probabilityOfPrecipitation": {
          "oneOf": [{ "type": "number" }, { "type": "null" }]
        },
        "isDaytime": { "type": "boolean" },
        "isOvernight": { "type": "boolean" },
        "timeLabel": {
          "type": "string",
          "pattern": "^\\d{1,2}[AP]M-\\d{1,2}[AP]M"
        },
        "hourlyPeriods": { "type": "array", "items": "$include:hourly.json" }
      }
    },
    "alert": {
      "type": "object",
      "properties": {
        "periodIndex": { "type": "integer" },
        "duration": { "type": "integer" },
        "alert": "$include:alerts.json"
      }
    },
    "precipPeriod": {
      "type": "object",
      "properties": {
        "start": { "type": "string" },
        "end": { "type": "string" },
        "liquid": { "type": "number" },
        "ice": { "type": "number" },
        "snow": { "type": "number" }
      }
    }
  }
}
