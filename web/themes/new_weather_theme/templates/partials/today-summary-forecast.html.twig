{% set today = weather.daily[0] %}
<h3 class="wx-visual-h2 text-normal text-primary-darker padding-x-2 tablet:padding-x-0 desktop:margin-top-0 margin-top-3 margin-bottom-2">
    {{ "Today's forecast" | t }}
</h3>
<div class="flex-1 height-full">
    <ol class="usa-list--unstyled height-full">
        {# Attempt to render the period(s) associated with the current day #}
        {% set precipHours = today.precipitationPeriods[0] %}
        {% include '@new_weather_theme/partials/daily-summary-list-item.html.twig' with { 'periods': today.periods, 'dayHours': today.hourPeriods, 'alertPeriods': today.alerts, 'highestAlertLevel': today.highestAlertLevel, 'useOnlyLowForToday': today.useOnlyLowForToday, 'precipHours': precipHours, 'dayLabel': "Today" | t } %}
        {% set precipIndex = 1 %}
    </ol>
</div>
