{#
This template expects two variables available to it:
- content: The full object created from the daily forecast block
- dayIndex: The index of the day currently being rendered within
the content
#}
{% set day = content[dayIndex] %}
{% set dayId = day.periods[0].monthAndDay | lower | replace({" ":"-"}) %}
{% set hasAlertIcon = day.highestAlertLevel != "" %}
{% set temps = day.periods | map(p => p.temperature) %}
{% set low = min(temps) %}
{% set high = max(temps) %}
{% set pops = day.periods | map(p => p.probabilityOfPrecipitation) %}
{% set pop = max(pops) %}
{% if pop is null %}
    {% set pop = 0 %}
{% endif %}
<a
    class="wx-quick-forecast-item"
    href="#{{dayId}}"
    id="{{dayId}}-quick-forcast-button"
>
    <div class="wx-quick-forecast-item-top">
        <time class="" datetime="{{day.periods[0].startTime}}" aria-label="{{"Date" | t}}">
            <span>{{day.periods[0].dayName}}</span>
            <span class="display-block">
                {{day.periods[0].monthNumericString}}/{{day.periods[0].dayNumericString}}
            </span>
        </time>

        <div class="wx-quick-forecast-condition" aria-label="{{"Condition" | t}}">
            {%  if hasAlertIcon %}
                <svg role="img" aria-hidden="true" class="wx-alert-icon" data-alert-level="{{day.highestAlertLevel}}">
                    <use xlink:href="/themes/new_weather_theme/assets/images/uswds/sprite.svg#warning"></use>
                </svg>
            {% endif %}

            <svg role="img" aria-hidden="true" class="wx-alert-icon">
                <use xlink:href="{{ "/" ~ directory ~ "/assets/images/spritesheet.svg#" ~ day.periods[0].icon.base }}"></use>
            </svg>
        </div>

        <hr/>
        
        <div class="wx-quick-forecast-item-high-low">
            {% if not day.useOnlyLow %}
                <div class="wx-quick-high">
                    <span class="wx-quick-label">
                        {{"High" | t}}
                    </span>
                    <span class="wx-quick-temp">
                        {{ high  }}
                        <span aria-hidden="true" class="wx-degree">
                            &deg;F
                        </span>
                        <span class="usa-sr-only">℉</span>
                    </span>
                </div>
            {% endif %}
            <div class="wx-quick-low">
                <span class="wx-quick-label">
                    {{"Low" | t}}
                </span>
                <span class="wx-quick-temp">
                    {{ low }}
                    <span aria-hidden="true" class="wx-degree">
                        &deg;F
                    </span>
                    <span class="usa-sr-only">℉</span>
                </span>
            </div>
        </div>
    </div>
    
    <hr/>
    
    <div class="wx-quick-forecast-item-bottom">
        <span>
            {{pop}}% {{"chance of precipitation" | t}} 
        </span>
    </div>
</a>
